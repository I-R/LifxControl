#:kivy 1.9.0
<Widget>:
    canvas.after:
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1
            dash_offset: 5
            dash_length: 3

<LampInfo@GridLayout>:
    spacing: 20
    padding: 40
    rows: 2
    #size_hint_x: 0.3

<DataViewItem@BoxLayout>:
    did:   self.did
    thumb: self.thumb
    title: self.title

    spacing: 20
    padding: 30
    cols: 2
    orientation: 'horizontal'
    #width: 200
    #height:100
    size_hint: 1,None

    #Image:
    #    source: root.thumb
    #    size: 48,48
    Label:
        text: root.thumb
        font_size: 20
        #text_size: self.width, None
        text_size: 100, None
        color: 0,1,0,0.5
    Label:
        text: root.title
        font_size: 20
        padding: dp(6), dp(4)
        #text_size: self.width, None

<LifxController>:
    lamp_grid: lamp_grid
    #data:  data_view2

    BoxLayout:
        orientation:    'vertical'
        top:            root.top
        center_x:       root.width/2


        HeadingLabel:
            text: 'All Devices'

        Label:
            text: '~ label ~'

        LampInfo:
            id: lamp_grid
            DataViewItem:
                did: "0"
                thumb: "img/img3.png"
                title: "No. 2"

<Label>:
    font_size: 20
    padding: dp(6), dp(4)
    #text_size: None, None
    #size: self.texture_size
    #size: self.texture_size

    #size_hint_x: 0.5


<HeadingLabel@Label>:
    bold: True
    padding: dp(6), dp(4)
    valign: 'top'
    #height: self.texture_size[1]
    font_size: 36
    text_size: None, None
    #size_hint: None, None
